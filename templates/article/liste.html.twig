{% extends 'base.html.twig' %}

{% block title %}Le liste !
{% endblock %}

{% block body %}

	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid px-4">
				<h1 class="mt-4">Liste article</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item">
						<a href="{{ path('app_article') }}">Article</a>
					</li>
					<li class="breadcrumb-item active">Liste article</li>
				</ol>
				<div class="row">
					{% for article in articles %}
						<div class="col-md-4 mb-4">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title">{{ article.titre }}
									</h5>
									<img src="{{ asset('uploads/images/' ~ article.Image) }}"/img>
									<p class="card-text">{{ article.texte }}</p>
									Publi√© le
									{{ article.date|date('d/m/Y H:i') }}
								</div>
								<div class="card-footer text-muted">
									<a href="{{ path('app_article_update', {id: article.id}) }}" class="btn btn-primary">Modifier</a>
									<a href="{{ path('app_article_delete', {id: article.id}) }}" class="btn btn-danger">Supprimer</a>

								</div>
							</div>
						</div>
					{% else %}
						<p>Aucun article disponible.</p>
					{% endfor %}
				</div>
			</div>
		</main>

	</div>
</div>{% endblock %}
